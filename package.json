{
  "name": "node-leap",
  "version": "0.0.1",
  "description": "Node Leap is a node boilerplate that follows best practicles of software design and agile",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loomi/node-leap.git"
  },
  "author": "itd@cin.ufpe.br",
  "bugs": {
    "url": "https://github.com/loomi/node-leap/issues"
  },
  "homepage": "https://github.com/loomi/node-leap#readme",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "npx prisma generate --schema=./src/libs/prisma/schema.prisma",
    "prisma:migration": "npx prisma migrate dev --schema=./src/libs/prisma/schema.prisma --name",
    "prisma:migration:push": "npx prisma migrate deploy --schema=./src/lbis/prisma/schema.prisma",
    "old:build": "tsc -p tsconfig-build.json",
    "old:build:local": "rimraf dist && npm run build",
    "old:start": "node dist/main/server.js",
    "old:start:local": "npm run prisma:migration:push && npx nodemon --exec 'npm run build:local && npm run start' --watch src -e ts",
    "old:start:watch": "npm run prisma:migration:push && npx nodemon --exec 'npm run start' --watch src -e ts",
    "old:lint": "eslint 'src/**' '__tests__/**'",
    "old:lint:fix": "eslint 'src/**' '__tests__/**' --fix",
    "old:style:check": "prettier --check 'src/**/*.ts' '__tests__/**/*.ts'",
    "old:style:fix": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'",
    "old:test": "jest --passWithNoTests --noStackTrace --runInBand --no-cache",
    "old:test:verbose": "jest --passWithNoTests --runInBand",
    "old:test:unit": "npm test -- --watch -c jest-unit-config.js",
    "old:test:integration": "npm test -- --watch -c jest-integration-config.js --verbose",
    "old:test:staged": "npm test -- --findRelatedTests",
    "old:test:ci": "npm test -- --coverage",
    "old:prisma:generate": "npx prisma generate --schema=./src/main/infra/prisma/schema.prisma",
    "old:prisma:migration": "npx prisma migrate --schema=./src/main/infra/prisma/schema.prisma --name",
    "old:prisma:migration:push": "npx prisma migrate deploy --schema=./src/main/infra/prisma/schema.prisma",
    "old:plop": "plop"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/event-emitter": "^1.4.1",
    "@nestjs/jwt": "^10.0.2",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.1.2",
    "@prisma/client": "^4.4.0",
    "aws-sdk": "^2.1232.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.8",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.3",
    "prettier": "^2.3.2",
    "prisma": "^4.4.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/../src/$1",
      "^@/api-users": "<rootDir>/../src/api-users/$1",
      "^@/users": "<rootDir>/../src/users/$1",
      "^@/notifications": "<rootDir>/../src/notifications/$1"
    }
  }
}
